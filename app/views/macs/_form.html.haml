.well
  = semantic_form_for @mac do |f|
    .row
      .col-md-6
        = f.input :node, label: 'Nodo'
      .col-md-6
        = f.input :mac
    .row
      .col-md-12
        = f.input :comment, label: 'Comentario'
    .row
      .col-md-12
        = f.submit "Aceptar", class: 'btn btn-success pull-right'
        = link_to "Cancelar", [:macs], class: 'btn pull-right'
