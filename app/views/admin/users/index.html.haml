.row
  .col-lg-6
    = form_tag [:admin, :users], method: :get do
      = text_field_tag :search_term, @search_term
      = submit_tag "Buscar"
      = link_to "limpiar", [:admin, :users]
  .col-lg-6
    = link_to "Nuevo usuario", [:new, :admin, :user], class: 'pull-right btn btn-success'
- if @users.present?
  %table
    %thead
      %th Email
      %th Macs
      %th Admin?
      %th Opciones
    %tbody
      = render @users
  = will_paginate @users
- else
  No hay usuarios
